#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config CUSTOM_APPS_MCPD
        tristate "McpD App"
        default n
        ---help---
                Enable the McpD App

if CUSTOM_APPS_MCPD

config CUSTOM_APPS_MCPD_PROGNAME
        string "Program name"
        default "mcpd"
        ---help---
                This is the name of the program that will be used when the NSH ELF
                program is installed.

config CUSTOM_APPS_MCPD_PRIORITY
        int "McpD task priority"
        default 100

config CUSTOM_APPS_MCPD_STACKSIZE
        int "McpD stack size"
        default DEFAULT_TASK_STACKSIZE

endif
