#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config CUSTOM_APPS_LVGL_APP
        tristate "MCP LVGL App"
        default n
        ---help---
                Enable the LVGL App

if CUSTOM_APPS_LVGL_APP

config CUSTOM_APPS_LVGL_APP_PROGNAME
        string "Program name"
        default "lvgl_app"
        ---help---
                This is the name of the program that will be used when the NSH ELF
                program is installed.

config CUSTOM_APPS_LVGL_APP_PRIORITY
        int "LVGL App task priority"
        default 100

config CUSTOM_APPS_LVGL_APP_STACKSIZE
        int "LVGL App stack size"
        default DEFAULT_TASK_STACKSIZE

endif
