#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config CUSTOM_APPS_MCP
        tristate "Mcp App"
        default n
        ---help---
                Enable the Mcp App

if CUSTOM_APPS_MCP

config CUSTOM_APPS_MCP_PROGNAME
        string "Program name"
        default "mcp"
        ---help---
                This is the name of the program that will be used when the NSH ELF
                program is installed.

config CUSTOM_APPS_MCP_PRIORITY
        int "Mcp task priority"
        default 100

config CUSTOM_APPS_MCP_STACKSIZE
        int "Mcp stack size"
        default DEFAULT_TASK_STACKSIZE

endif
